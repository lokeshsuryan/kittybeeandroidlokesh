<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rlAttachmentZoomActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imgZoomAttachment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:scaleType="fitXY"
        android:transitionName="@string/zoom_image_transition" />

    <com.kittyapplication.chat.custom.CircluarProgressBarWithNumber
        android:id="@+id/pbZoomAttachment"
        app:progress_text_color="@color/image_loader_color"
        app:progress_text_size="12sp"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:visibility="gone"
        android:layout_centerInParent="true"
        android:progress="0" />

    <ImageView
        android:id="@+id/imgSaveImage"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_margin="20dp"
        android:background="@android:color/transparent"
        android:clickable="true"
        android:src="@drawable/shape_save_image" />

</RelativeLayout>