<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rlCreateGroup"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:clickable="true">


    <com.kittyapplication.custom.RoundedImageView
        android:id="@+id/imgGroupMember"
        android:layout_width="@dimen/common_50_dp"
        android:layout_height="@dimen/common_50_dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="@dimen/common_10_dp"
        android:layout_marginEnd="@dimen/common_10_dp"
        android:layout_marginLeft="@dimen/common_10_dp"
        android:layout_marginRight="@dimen/common_10_dp"
        android:layout_marginStart="@dimen/common_10_dp" />

    <com.kittyapplication.custom.CustomTextViewBold
        android:id="@+id/txtGroupMemberName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/common_10_dp"
        android:layout_toEndOf="@+id/imgGroupMember"
        android:layout_toLeftOf="@+id/llAddGroupButtons"
        android:layout_toRightOf="@+id/imgGroupMember"
        android:layout_toStartOf="@+id/llAddGroupButtons"
        android:focusableInTouchMode="false"
        android:textSize="@dimen/h4" />

    <com.kittyapplication.custom.CustomTextViewNormal
        android:id="@+id/txtGroupMemberNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtGroupMemberName"
        android:layout_marginTop="@dimen/common_5_dp"
        android:layout_toEndOf="@+id/imgGroupMember"
        android:layout_toLeftOf="@+id/llAddGroupButtons"
        android:layout_toRightOf="@+id/imgGroupMember"
        android:layout_toStartOf="@+id/llAddGroupButtons"
        android:focusableInTouchMode="false"
        android:textSize="@dimen/h5" />


    <LinearLayout
        android:id="@+id/llAddGroupButtons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_phone"
            android:visibility="gone" />

        <CheckBox
            android:id="@+id/cbAddGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white" />
    </LinearLayout>
    <!--android:background="@drawable/image_checkbox"-->

</RelativeLayout>
