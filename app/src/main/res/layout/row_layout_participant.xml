<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rlParticipant"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/common_10_dp"
    android:background="@color/white">

    <com.kittyapplication.custom.RoundedImageView
        android:id="@+id/imgParticipant"
        android:layout_width="@dimen/common_60_dp"
        android:layout_height="@dimen/common_60_dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="@dimen/common_20_dp"
        android:layout_marginStart="@dimen/common_20_dp"
        android:layout_marginTop="@dimen/common_10_dp" />


    <com.kittyapplication.custom.CustomTextViewBold
        android:id="@+id/txtParticipantName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/common_10_dp"
        android:layout_marginStart="@dimen/common_10_dp"
        android:layout_marginTop="@dimen/common_10_dp"
        android:layout_toEndOf="@id/imgParticipant"
        android:layout_toLeftOf="@+id/rlContactButtons"
        android:layout_toRightOf="@id/imgParticipant"
        android:layout_toStartOf="@+id/rlContactButtons"
        android:gravity="left|start"
        android:maxLength="20"
        android:paddingTop="@dimen/common_5_dp"
        android:textColor="@color/black"
        android:textSize="@dimen/h4" />


    <com.kittyapplication.custom.CustomTextViewNormal
        android:id="@+id/txtParticipantNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtParticipantName"
        android:layout_marginLeft="@dimen/common_10_dp"
        android:layout_marginStart="@dimen/common_10_dp"
        android:layout_toEndOf="@id/imgParticipant"
        android:layout_toLeftOf="@+id/rlContactButtons"
        android:layout_toRightOf="@id/imgParticipant"
        android:layout_toStartOf="@+id/rlContactButtons"
        android:gravity="left|start"
        android:maxLength="20"
        android:paddingTop="@dimen/common_5_dp"
        android:textColor="@color/registrationtextcolor"
        android:textSize="@dimen/h5" />

    <com.kittyapplication.custom.RoundedImageView
        android:id="@+id/imgParticipantWith"
        android:layout_width="@dimen/common_60_dp"
        android:layout_height="@dimen/common_60_dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@id/imgParticipant"
        android:layout_marginLeft="@dimen/common_20_dp"
        android:layout_marginStart="@dimen/common_20_dp"
        android:layout_marginBottom="@dimen/common_5_dp"
        android:layout_marginTop="@dimen/common_10_dp" />


    <com.kittyapplication.custom.CustomTextViewBold
        android:id="@+id/txtParticipantNameWith"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imgParticipant"
        android:layout_marginLeft="@dimen/common_10_dp"
        android:layout_marginStart="@dimen/common_10_dp"
        android:layout_marginTop="@dimen/common_10_dp"
        android:layout_toEndOf="@id/imgParticipant"
        android:layout_toLeftOf="@+id/rlContactButtons"
        android:layout_toRightOf="@id/imgParticipant"
        android:layout_toStartOf="@+id/rlContactButtons"
        android:gravity="left|start"
        android:maxLength="20"
        android:paddingTop="@dimen/common_5_dp"
        android:textColor="@color/black"
        android:textSize="@dimen/h4" />


    <com.kittyapplication.custom.CustomTextViewNormal
        android:id="@+id/txtParticipantNumberWith"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtParticipantNameWith"
        android:layout_marginLeft="@dimen/common_10_dp"
        android:layout_marginStart="@dimen/common_10_dp"
        android:layout_toEndOf="@id/imgParticipant"
        android:layout_toLeftOf="@+id/rlContactButtons"
        android:layout_toRightOf="@id/imgParticipant"
        android:layout_toStartOf="@+id/rlContactButtons"
        android:gravity="left|start"
        android:maxLength="20"
        android:paddingTop="@dimen/common_5_dp"
        android:textColor="@color/registrationtextcolor"
        android:textSize="@dimen/h5" />

    <LinearLayout
        android:id="@id/rlContactButtons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/common_10_dp"
        android:layout_marginRight="@dimen/common_10_dp"
        android:gravity="right">

        <com.kittyapplication.custom.CustomTextViewNormal
            android:id="@+id/txtParticipantCurrentHost"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="@drawable/contact_summary_current_host"
            android:gravity="center"
            android:padding="@dimen/common_5_dp"
            android:text="@string/current_host"
            android:textColor="@color/white"
            android:textSize="@dimen/h6"
            android:visibility="visible" />

        <com.kittyapplication.custom.CustomTextViewNormal
            android:id="@+id/txtParticipantAdmin"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtParticipantCurrentHost"
            android:layout_marginTop="@dimen/common_5_dp"
            android:background="@drawable/contact_invite_bg"
            android:gravity="center"
            android:text="@string/admin"
            android:textColor="@color/white"
            android:textSize="@dimen/h6"
            android:visibility="visible" />


        <com.kittyapplication.custom.CustomTextViewNormal
            android:id="@+id/txtHostedParticipant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtParticipantAdmin"
            android:layout_marginTop="@dimen/common_5_dp"
            android:background="@drawable/contact_summary_hosted"
            android:gravity="center"
            android:paddingBottom="@dimen/common_5_dp"
            android:paddingLeft="@dimen/common_20_dp"
            android:paddingRight="@dimen/common_20_dp"
            android:paddingTop="@dimen/common_5_dp"
            android:text="@string/hosted_successfully"
            android:textColor="@color/white"
            android:textSize="@dimen/h6"
            android:visibility="visible" />


        <com.kittyapplication.custom.CustomTextViewNormal
            android:id="@+id/txtParticipantNotHosted"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtHostedParticipant"
            android:layout_marginTop="@dimen/common_5_dp"
            android:background="@drawable/contact_invite_bg"
            android:gravity="center"
            android:text="@string/not_hosted"
            android:textColor="@color/white"
            android:textSize="@dimen/h6"
            android:visibility="visible" />
    </LinearLayout>

</RelativeLayout>
