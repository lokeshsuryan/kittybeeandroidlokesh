<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/common_10_dp"
        android:paddingStart="@dimen/common_10_dp"
        android:weightSum="10">

        <com.kittyapplication.custom.CustomTextViewBold
            android:id="@+id/dairyPersonName"
            android:layout_width="@dimen/common_0_dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:gravity="left|start"
            android:lineSpacingExtra="@dimen/common_5_dp"
            android:textColor="@color/registrationtextcolor" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="fill_parent"
            android:layout_marginLeft="@dimen/common_5_dp"
            android:layout_marginStart="@dimen/common_5_dp"
            android:background="@color/colorAccent" />

        <RelativeLayout
            android:layout_width="@dimen/common_0_dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center"
            android:paddingBottom="@dimen/common_10_dp"
            android:paddingTop="@dimen/common_10_dp">

            <CheckBox
                android:id="@+id/cbPaid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:gravity="center" />
        </RelativeLayout>

        <View
            android:layout_width="0.5dp"
            android:layout_height="fill_parent"
            android:background="@color/colorAccent" />

        <RelativeLayout
            android:layout_width="@dimen/common_0_dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center">

            <CheckBox
                android:id="@+id/cbPunctuality"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:gravity="center" />
        </RelativeLayout>

        <View
            android:layout_width="0.5dp"
            android:layout_height="fill_parent"
            android:background="@color/colorAccent" />

        <RelativeLayout
            android:layout_width="@dimen/common_0_dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center">

            <CheckBox
                android:id="@+id/cbPresent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:gravity="center" />
        </RelativeLayout>

        <com.kittyapplication.custom.CustomTextViewNormal
            android:id="@+id/txtTotalPaid"
            android:layout_width="@dimen/common_0_dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:visibility="gone" />

        <com.kittyapplication.custom.CustomTextViewNormal
            android:id="@+id/txtTotalPresent"
            android:layout_width="@dimen/common_0_dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:visibility="gone" />

        <com.kittyapplication.custom.CustomTextViewNormal
            android:id="@+id/txtTotalPunctuality"
            android:layout_width="@dimen/common_0_dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:visibility="gone" />

    </LinearLayout>

</RelativeLayout>