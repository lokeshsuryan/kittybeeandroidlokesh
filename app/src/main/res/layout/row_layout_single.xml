<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rlContact"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingEnd="@dimen/activity_horizontal_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingStart="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/common_10_dp">

    <com.kittyapplication.custom.RoundedImageView
        android:id="@+id/imgContactUser"
        android:layout_width="@dimen/common_60_dp"
        android:layout_height="@dimen/common_60_dp"
        android:layout_marginEnd="@dimen/common_10_dp"
        android:layout_marginRight="@dimen/common_10_dp" />

    <com.kittyapplication.custom.CustomTextViewBold
        android:id="@+id/txtContactName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/common_15_dp"
        android:layout_toEndOf="@+id/imgContactUser"
        android:layout_toLeftOf="@+id/rlContactButtons"
        android:layout_toRightOf="@+id/imgContactUser"
        android:layout_toStartOf="@+id/rlContactButtons"
        android:text="Keyur Ashra"
        android:textColor="@color/black"
        android:textSize="@dimen/h4" />


    <com.kittyapplication.custom.CustomTextViewNormal
        android:id="@+id/txtContactTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtContactName"
        android:layout_marginTop="@dimen/common_5_dp"
        android:layout_toEndOf="@id/imgContactUser"
        android:layout_toLeftOf="@+id/rlContactButtons"
        android:layout_toRightOf="@+id/imgContactUser"
        android:layout_toStartOf="@id/rlContactButtons"
        android:lineSpacingExtra="@dimen/common_5_dp"
        android:maxLength="60"
        android:text="@string/app_msg"
        android:textColor="@color/registrationtextcolor"
        android:textSize="@dimen/h5" />

    <RelativeLayout
        android:id="@id/rlContactButtons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true">

        <ImageView
            android:id="@+id/imgContactPhone"
            android:layout_width="@dimen/common_30_dp"
            android:layout_height="@dimen/common_30_dp"
            android:layout_centerInParent="true"
            android:background="@drawable/ic_add_couple_bg"
            android:padding="@dimen/common_3_dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_add_couple"
            android:visibility="visible" />
    </RelativeLayout>

</RelativeLayout>
