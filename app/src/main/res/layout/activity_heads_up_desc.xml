<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/common_30_dp"
        android:orientation="vertical">

        <com.kittyapplication.custom.CustomTextViewBold
           android:id="@+id/txtHeadsupDescTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/common_10_dp"
            android:layout_marginTop="@dimen/common_10_dp"
            android:gravity="center_horizontal"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/h3" />

        <com.kittyapplication.custom.CustomTextViewBold
            android:id="@+id/txtHeadsupDescDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/common_10_dp"
            android:gravity="center_horizontal"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/h4" />

        <com.kittyapplication.custom.CustomTextViewBold
            android:id="@+id/txtHeadsupDescTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/common_20_dp"
            android:gravity="center_horizontal"
            android:textColor="@color/registrationtextcolor"
            android:textSize="@dimen/h5" />


        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_1_dp"
            android:background="@color/colorAccent" />

        <com.kittyapplication.custom.CustomTextViewNormal
            android:id="@+id/txtHeadsupDescAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:lineSpacingExtra="@dimen/common_5_dp"
            android:layout_marginBottom="@dimen/common_20_dp"
            android:layout_marginTop="@dimen/common_20_dp"
            android:gravity="center_horizontal"
            android:textColor="@color/registrationtextcolor"
            android:textSize="@dimen/h5" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_1_dp"
            android:background="@color/colorAccent" />


        <com.kittyapplication.custom.CustomTextViewNormal
            android:id="@+id/txtHeadsupDescDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="@dimen/common_5_dp"
            android:layout_marginBottom="@dimen/common_50_dp"
            android:layout_marginTop="@dimen/common_20_dp"
            android:textColor="@color/registrationtextcolor"
            android:textSize="@dimen/h6" />

    </LinearLayout>

</ScrollView>