<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/common_3_dp"
    android:orientation="vertical">

    <com.kittyapplication.custom.RoundedImageView
        android:id="@+id/imgAddedMembers"
        android:layout_width="@dimen/common_50_dp"
        android:layout_height="@dimen/common_50_dp"
        android:scaleType="centerCrop"
        app:civ_border_color="@color/colorAccent"
        app:civ_border_width="@dimen/common_2_dp" />

    <com.kittyapplication.custom.CustomTextViewNormal
        android:id="@+id/txtUserName"
        android:layout_width="@dimen/common_50_dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/common_3_dp"
        android:gravity="center"
        android:lineSpacingExtra="@dimen/common_2_dp"
        android:maxLines="2"
        android:textColor="@color/black"
        android:textSize="@dimen/h6" />

</LinearLayout>